<section class="ks-contact_wrapper"
    style="background-color:rgba(111,209,219,255);">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="ks-contact_from">
                    <h4 class="ks-title" align="center">Contact Us</h4>
                    <form onsubmit="sendEmail(); reset(); return false">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                                <div class="ks-inputField">
                                    <input type="text" name="name" id="name"
                                        class="form-control"
                                        placeholder="Full Name" required>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                                <div class="ks-inputField">
                                    <input type="email" name="email" id="email"
                                        class="form-control"
                                        placeholder="Email Address" required>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                                <div class="ks-inputField">
                                    <input type="phone" name="phone" id="phone"
                                        class="form-control"
                                        placeholder="Phone Number" required>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                                <div class="ks-inputField">
                                    <textarea placeholder="Your Message"
                                        class="form-control" name="message"
                                        id="message" required></textarea>
                                </div>
                            </div>
                            <input type="hidden" name="subject" id="subject"
                                value="New Student Submission!">
                            <br />
                            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                                <button type="submit"
                                    class="ks-btn-sub submitForm">Submit</button>
                                <div class="response"></div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="/javascripts/contact/smtp.js"></script>
<script>
    function sendEmail() {
        Email.send({
            SecureToken: "a4726dae-4a33-43ca-b913-9db99a03a56d",
            To: "bdfd2005@gmail.com",
            From: "sp055.bym@gmail.com",
            Subject: document.getElementById("subject").value,
            Body: "New Contact From"
                + "<br> Email: " + document.getElementById("email").value
                + "<br> Phone: " + document.getElementById("phone").value
                + "<br> Message: " + document.getElementById("message").value
        }).then(
            message => console.log(message)
        )
    }
</script>