<section class="ks-contact_wrapper"
    style="background-color:rgba(111,209,219,255);">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="ks-contact_from">
                    <h4 class="ks-title" align="center">Contact Us</h4>
                    <form>
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                                <div class="ks-inputField">
                                    <input type="text" class="require"
                                        placeholder="Enter Your Name"
                                        name="full_name" id="full_name">
                                    <!-- <i class="fa fa-user"
                                        aria-hidden="true"></i> -->
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                                <div class="ks-inputField">
                                    <input type="text" class="require"
                                        placeholder="Enter Your Email"
                                        name="email" id="email"
                                        data-valid="email"
                                        data-error="Email should be valid.">
                                    <!-- <i class="fa fa-envelope"
                                    aria-hidden="true"></i> -->
                                </div>
                            </div>
                            <!-- <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                            <div class="ks-inputField">
                                <input type="text" class="require"
                                    placeholder="Enter Your Issue"
                                    name="subject" id="subject">
                                <i class="fa fa-question-circle"
                                    aria-hidden="true"></i>
                            </div>
                        </div> -->
                            <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                                <div class="ks-inputField">
                                    <input type="text"
                                        placeholder="Enter Your Phone">
                                    <!-- <i class="fa fa-phone-square"
                                    aria-hidden="true"></i> -->
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                                <div class="ks-inputField">
                                    <textarea
                                        placeholder="Enter Your Message..."
                                        class="require" name="message"
                                        id="message"></textarea>
                                    <!-- <i class="fa fa-archive" aria-hidden="true"></i> -->
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                                <button type="button"
                                    class="ks-btn-sub submitForm">Submit</button>
                                <div class="response"></div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>